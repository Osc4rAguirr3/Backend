{{#if isValid}}
    <div class="productsContainer">
        {{#each docs}}
            <div class="productCard">
                <p>
                    {{this.title}}
                </p>
                <p>
                    {{this.description}}
                </p>
                <p>
                    $ {{this.price}}
                </p>
            </div>
        {{/each}}
    </div>

    <div class="navLinksContainer">
        {{#if hasPrevPage}}
            <a href={{this.prevLink}} class="navLink"> Anterior</a>
        {{/if}}
    
        &nbsp;
            {{this.page}}
        &nbsp;

        {{#if hasNextPage}}
            <a href={{this.nextLink}} class="navLink"> Siguiente</a>
        {{/if}}
    </div>
{{else}}
    <div>
        No se hallaron productos que coincidan con los filtros aplicados.
    </div>
{{/if}}